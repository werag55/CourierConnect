@model Request

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Your request has been rejected</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <h3>The offer you have chosen will not be realized.</h3>
                    <h3>Company explanation: @Model.rejectionReason</h3>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <a asp-controller="Offer" asp-action="Index" asp-route-id="@Model.offer.inquiryId" class="btn btn-outline-primary border  form-control">
                            View other offers
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to Home
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


