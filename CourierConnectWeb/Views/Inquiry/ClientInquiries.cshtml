@model List<ClientInquiryVM>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Your last inquiries</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                @* <a asp-controller="Inquiry" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create new Inquiry
                </a> *@
                @Html.ActionLink("Create new Inquiry", "Create", "Inquiry", null, new { @class = "btn btn-primary" })
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Pickup date</th>
                    <th>Delivery date</th>
                    <th>Source address</th>
                    <th>Delivery address</th>
                    <th>Package details</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => obj.Inquiry.pickupDate.Date)</td>
                        <td>@Html.DisplayFor(model => obj.Inquiry.deliveryDate.Date)</td>
                        <td>@Html.DisplayFor(model => obj.Inquiry.sourceAddress.ToString())</td>
                        <td>@Html.DisplayFor(model => obj.Inquiry.destinationAddress.ToString())</td>
                        <td>@Html.DisplayFor(model => obj.Inquiry.package.ToString())</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                @if (obj.hasDelivery)
                                {
                                     @* <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Inquiry.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> View delivery
                                    </a> *@
                                    @Html.ActionLink("View delivery", "Edit", "Inquiry", new { id = obj.Inquiry.Id }, new { @class = "btn btn-primary mx-2" })
                                }
                                else
                                {
                                    @* <a asp-controller="Offer" asp-action="Index" asp-route-id="@obj.Inquiry.Id" class="btn btn-outline-primary border  form-control">
                                        View offers
                                    </a> *@
                                    @Html.ActionLink("View offers", "Index", "Offer", new { id = obj.Inquiry.Id }, new { @class = "btn btn-outline-primary border  form-control" })
                                }
                                </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}