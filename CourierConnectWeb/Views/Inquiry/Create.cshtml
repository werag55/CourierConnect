@model Inquiry

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Inquiry</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="deliveryDate" class="form-control border-0 shadow" />
                    <label asp-for="deliveryDate" class="ms-2"></label>
                    <span asp-validation-for="deliveryDate" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="destinationAddress.streetName" class="form-control border-0 shadow" />
                    <label asp-for="destinationAddress.streetName" class="ms-2"></label>
                    <span asp-validation-for="destinationAddress.streetName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="destinationAddress.houseNumber" class="form-control border-0 shadow" />
                    <label asp-for="destinationAddress.houseNumber" class="ms-2"></label>
                    <span asp-validation-for="destinationAddress.houseNumber" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="destinationAddress.flatNumber" class="form-control border-0 shadow" />
                    <label asp-for="destinationAddress.flatNumber" class="ms-2"></label>
                    <span asp-validation-for="destinationAddress.flatNumber" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="destinationAddress.postcode" class="form-control border-0 shadow" />
                    <label asp-for="destinationAddress.postcode" class="ms-2"></label>
                    <span asp-validation-for="destinationAddress.postcode" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="isPriority" class="form-control border-0 shadow" />
                    <label class="ms-2">@Html.DisplayNameFor(model => model.isPriority)</label>
                    @* <label asp-for="isPriority" class="ms-2"></label> *@
                    <span asp-validation-for="isPriority" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="weekendDelivery" class="form-control border-0 shadow" />
                    <label asp-for="weekendDelivery" class="ms-2"></label>
                    <span asp-validation-for="weekendDelivery" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="isCompany" class="form-control border-0 shadow" />
                    <label asp-for="isCompany" class="ms-2"></label>
                    <span asp-validation-for="isCompany" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Inquiry" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>




@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}