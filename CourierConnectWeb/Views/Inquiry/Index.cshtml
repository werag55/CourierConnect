@model List<Inquiry>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Inquiry List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
@*                 <a asp-controller="Inquiry" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New Inquiry
                </a> *@
                @Html.ActionLink("Create New Inquiry", "Create", "Inquiry", null, new {@class = "btn btn-non-primary"})
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Inquiry Id
                    </th>
                    <th>
                        Delivery date
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => obj.Id)</td>
                        <td>
                            @Html.DisplayFor(model => obj.deliveryDate)
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                @* <a asp-controller="Inquiry" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a> *@
                                @Html.ActionLink("Edit", "Edit", "Inquiry", new {id = obj.Id}, new { @class = "btn btn-primary mx-2" })
                                @*<a asp-controller="Inquiry" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>*@
                                @Html.ActionLink("Delete", "Delete", "Inquiry", new { id = obj.Id }, new { @class = "btn btn-danger mx-2" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>