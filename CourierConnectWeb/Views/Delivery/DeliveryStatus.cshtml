@model Delivery

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delivery Status</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
        </div>

       

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Delivery Id
                    </th>
                    <th>
                        Courier
                    </th>
                    <th>
                        Delivery Date
                    </th>
                    <th>
                        Delivery Status
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Id</td>
                    <td>@Model.courierName @Model.courierSurname</td>
                    <td>@Model.deliveryDate</td>
                    @if(Model.deliveryStatus == DeliveryStatus.CannotDeliver)
                    {
                        <td>@Model.deliveryStatus.ToString(): @Model.reason</td>
                    }
                    else
                    {
                        <td>@Model.deliveryStatus.ToString()</td>
                    }
                </tr>
            </tbody>
        </table>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="button" class="btn btn-primary form-control">Delete Delivery</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Delivery" asp-action="Index" class="btn btn-outline-primary border  form-control">
                    Back to Delivery List
                </a>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
